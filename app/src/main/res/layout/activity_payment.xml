<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/formPengiriman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toTopOf="@+id/product_cardview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/product_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="52dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <TableLayout
                android:id="@+id/detailproduk_table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/detail_aboutme"
                android:layout_marginTop="10dp"
                android:stretchColumns="1"
                app:layout_constraintTop_toBottomOf="@+id/detail_aboutme"
                tools:layout_editor_absoluteX="0dp">

                <TableRow
                    android:id="@+id/productdetails_tablerow"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp">

                    <TextView

                        android:id="@+id/productdetails_textview"
                        android:layout_column="1"
                        android:padding="10dip"
                        android:text="Product Details"
                        android:textColor="#000000"

                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>


                <TableRow
                    android:id="@+id/name_tablerow"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp">

                    <TextView

                        android:id="@+id/name_textview"
                        android:layout_column="1"
                        android:padding="10dip"
                        android:text="Name"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/name_detail"
                        android:gravity="right"
                        android:padding="10dip"

                        android:text="null"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/weight_tablerow"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/weight_textview"
                        android:layout_column="1"
                        android:padding="10dip"
                        android:text="Weight"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/weight_detail"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="null"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/shipmentplan_tablerow"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/shipmentplan_textview"
                        android:layout_column="1"
                        android:padding="10dip"
                        android:text="Shipment Plan"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/shipmentplan_detail"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="null"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/price_tablerow"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/price_textview"
                        android:layout_column="1"
                        android:padding="10dip"
                        android:text="Total Price"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/price_detail"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="null"
                        android:textStyle="bold" />
                </TableRow>


            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1" />

                <Button
                    android:id="@+id/button_proceed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="PROCEED" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1" />

                <Button
                    android:id="@+id/button_return"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RETURN" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/register_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_marginBottom="76dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_cardview"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:id="@+id/register_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Shipment Address"
                android:textSize="16sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/shipmentaddress_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your address" />


            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>