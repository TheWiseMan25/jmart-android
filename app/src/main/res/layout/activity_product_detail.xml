<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="38dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/detailproduk_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            tools:layout_editor_absoluteX="2dp">

            <LinearLayout
                android:id="@+id/detailproduk_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical">


                <TableLayout
                    android:id="@+id/detailproduk_table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/detail_aboutme"
                    android:layout_marginTop="10dp"
                    android:stretchColumns="1"
                    app:layout_constraintTop_toBottomOf="@+id/detail_aboutme"
                    tools:layout_editor_absoluteX="0dp">

                    <TableRow
                        android:id="@+id/detailproduk_tablerow"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:id="@+id/detailproduk"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Detail Produk"
                            android:textColor="#000000"

                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </TableRow>


                    <TableRow
                        android:id="@+id/category_tablerow"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:id="@+id/category_textview"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Category"
                            android:textSize="15sp" />

                        <TextView

                            android:id="@+id/category"
                            android:gravity="right"
                            android:padding="10dip"

                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/condition_tablerow"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/condition_textview"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Condition"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/condition"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/weight_tablerow"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/weight_textview"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Weight"
                            android:textSize="15sp" />

                        <TextView

                            android:id="@+id/weight"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/shipmentplan_tablerow"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/shipmentplan_textview"
                            android:layout_column="1"
                            android:padding="10dip"
                            android:text="Shipment Plan"
                            android:textSize="15sp" />

                        <TextView

                            android:id="@+id/shipmentplan"
                            android:gravity="right"
                            android:padding="10dip"
                            android:text="null"
                            android:textStyle="bold" />
                    </TableRow>


                </TableLayout>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buy_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/red"
                        android:gravity="center"
                        android:paddingHorizontal="30dp"
                        android:text="Buy" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/namaproduk_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="54dp">

        <!-- Title, secondary and supporting text -->
        <TextView
            android:id="@+id/namaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/hargaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Rp1,000,000"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>